@model PlanC.Client.Pages.Competence.EditModel

<h4>Competences</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Competences.CompetenceId" />
            <input type="hidden" asp-for="Competences.DisciplineId" />
            <div class="form-group">
                <label asp-for="Competences.Enonce" class="control-label"></label>
                <input asp-for="Competences.Enonce" class="form-control" />
                <span asp-validation-for="Competences.Enonce" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competences.AttitudeAttendu" class="control-label"></label>
                <input asp-for="Competences.AttitudeAttendu" class="form-control" />
                <span asp-validation-for="Competences.AttitudeAttendu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competences.NombreParties" class="control-label"></label>
                <input asp-for="Competences.NombreParties" class="form-control" />
                <span asp-validation-for="Competences.NombreParties" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Competences.CompetenceComplementaire" /> @Html.DisplayNameFor(model => model.Competences.CompetenceComplementaire)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Competences.RcdCdttm" class="control-label"></label>
                <input asp-for="Competences.RcdCdttm" class="form-control" />
                <span asp-validation-for="Competences.RcdCdttm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competences.TrkUid" class="control-label"></label>
                <input asp-for="Competences.TrkUid" class="form-control" />
                <span asp-validation-for="Competences.TrkUid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
