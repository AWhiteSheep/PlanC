<div class="row">
    <!-- Valeur pour le numéro de la compétence -->
    <div class="col-sm-6">
        <div class="form-group">
            <label for="competenceId" class="control-label"> Numéro de la compétence: </label>
            <input readonly id="competenceId" class="form-control" placeholder="Numéro de la compétence ####" @bind="compentence.CompetenceId" />
        </div>
    </div>
    <!-- Valeur pour l'identification du cours -->
    <div class="col-sm-6">
        <div class="form-group">
            <label class="control-label" for="CrsId"> Identifiant du cours: </label>
            <select readonly @bind="@(compentence.DisciplineId)" class="form-control">
                <option value="@compentence.Discipline.Id">@compentence.Discipline.Titre</option>
            </select>
        </div>
    </div>
    <!-- Valeur pour l'énoncé de la compétence -->
    <div class="col-sm-12">
        <div class="form-group">
            <label class="control-label"> Énoncé de la compétence: </label>
            <input readonly class="form-control" placeholder="Énoncé de la compétence" @bind="compentence.Enonce" />
        </div>
    </div>
    <!-- Attitude de la compétence attendu -->
    <div class="col-sm-12">
        <div class="form-group">
            <label class="control-label"> Attitude attendue de la compétence: </label>
            <input readonly row="5" class="form-control" placeholder="Attitude attendue de la compétence" @bind="compentence.AttitudeAttendu" />
        </div>
    </div>
    <!-- Nombre de parties pour compléter la compétence -->
    <div class="col-sm-6">
        <div class="form-group">
            <label class="control-label"> Nombre de parties: </label>
            <input readonly class="form-control" placeholder="##" @bind="compentence.NombreParties" />
        </div>
    </div>
    <!-- Compétence étant complémentaire ou non -->
    <div class="col-sm-6">
        <label class="control-label"> Optionnelle: </label>
        <div class="form-group">
            <div class="custom-control custom-checkbox">
                <input readonly id="CompetenceComplementaire" class="custom-control-input" @bind="compentence.CompetenceComplementaire" />
                <label class="custom-control-label" for="CompetenceComplementaire">
                    Cocher si la compétence est complémentaire
                </label>
            </div>
        </div>
    </div>
</div>


<table style="width:100%">
    <thead>
        <tr>
            <th style="text-align: center" colspan="2">Code: @compentence.CompetenceId</th>
        </tr>
        <tr class="font-italic text-center" style="color:deepskyblue; font-weight: bold">
            <th>Objectif</th>
            <th>Standard</th>
        </tr>
    </thead>
</table>
<table class="mt-3" style="width:100%; border: 2px solid deepskyblue;">
    <thead>
        <tr style="border-bottom: 1px solid deepskyblue;">
            <th>Énoncé de la compétence</th>
            <th>Contexte de réalisation</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td valign="top">
                <ul>
                    <li>@compentence.Enonce</li>
                </ul>
            </td>
            <td>
                <ul>
                    @foreach (var itemContext in compentence.CompetenceContextes)
                    {
                        <li>@itemContext.Text</li>
                    }
                </ul>
            </td>
        </tr>
    </tbody>
</table>
<table class="mt-2" style="width:100%; border: 2px solid deepskyblue;">
    <thead>
        <tr style="border-bottom: 1px solid deepskyblue;">
            <th>Éléments de la compétence</th>
            <th>Critères de performance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var itemContext in compentence.ElementsCompetence)
        {
            <tr>
                <td valign="top">
                    <ol start="@(compentence.ElementsCompetence.IndexOf(itemContext)+1)">
                        <li>@itemContext.Libele</li>
                    </ol>
                </td>
                <td>
                    <ul>
                        @foreach (var elementsCriteria in itemContext.CriteresElementCompetence)
                        {
                            <li>@elementsCriteria.DescriptionCritere</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    [CascadingParameter]
    [Parameter]
    public Competences compentence { get; set; }
}