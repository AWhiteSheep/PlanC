@page "/"
@namespace PlanC.Client.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{

    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(HttpContext).RequestToken;
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Plans Cadres</title>
    <base href="~/" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="lib/controllers/action-button.css" rel="stylesheet" />

    <!-- cdn pour le richtext editor pour les css https://cdnjs.com/libraries/Trumbowyg -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.19.1/ui/trumbowyg.min.css" integrity="sha256-iS3knajmo8cvwnS0yrVDpNnCboUEwZMJ6mVBEW1VcSA=" crossorigin="anonymous" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,600" rel="stylesheet">

    <!-- CDNs fontawesome, bootstrap & css style sheet pour syncfusion table -->
    <link rel="stylesheet" type="text/css" href="https://cdn.syncfusion.com/ej2/17.3.18/fabric.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.syncfusion.com/ej2/17.3.19/ej2-buttons/styles/material.css" />
    <script src="https://kit.fontawesome.com/50510c8db2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" />
    
</head>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <partial name="../Shared/_Navbar.cshtml" />
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content" style="min-height: 100vh">
                <div style="position:relative; background-image: url('/images/backgrounds/vangogh.jpg'); height: 100px;">
                </div>
                <!-- Topbar -->
                <partial name="../Shared/_Topbar.cshtml" />
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <app style="background-color: white">
                        @(await Html.RenderComponentAsync<App>(RenderMode.ServerPrerendered))
                    </app>
                </div>
                <div id="weatherOfDay" class="shadow position-absolute p-3" style="bottom: 25px; right: 25px; position: relative;">
                    <div id="calendarMenu" class="top-right-action-icon bg-memory-secondary text-center">
                        <i class="fas fa-calendar-day" style="vertical-align: bottom;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal de déconnection -->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <!-- Haut du modal -->
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"> Prêt pour partir? </h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <!-- Body du modal -->
                <div class="modal-body"> Choisir "Déconnexion" si vous voulez mettre fin à votre session. </div>
                <!-- Option du modal -->
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal"> Canceler </button>
                    <form id="formlogout" method="post">
                        @Html.AntiForgeryToken()
                    </form>
                    <button onclick="deconnection()" id="logout" class="btn btn-danger">Déconnexion</button>
                </div>
            </div>
        </div>
    </div>

    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- JQuery -->
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js" integrity="sha256-H3cjtrm/ztDeuhCN9I4yh4iN2Ybx/y1RM7rMmAesA0k=" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>

    <!-- librairie framework anime js https://cdnjs.cloudflare.com/ajax/libs/animejs/2.2.0/anime.min.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.2.0/anime.min.js"></script>
    <!-- librairie framework pour le richtext editor https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.19.1/trumbowyg.min.js -->
    <!-- rc:localization en francais pour le richtext editor https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.19.1/langs/fr.min.js https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.19.1/plugins/cleanpaste/trumbowyg.cleanpaste.min.js https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.19.1/plugins/pasteimage/trumbowyg.pasteimage.min.js --


    <!-- Ajax habituel de asp .net -->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.js"></script>

    <!-- pour le framework de template suncfusion -->
    <script src="https://cdn.syncfusion.com/ej2/17.3.18/dist/ej2.min.js"></script>
    <script src="https://cdn.syncfusion.com/ej2/17.3.18/dist/ejs.interop.min.js"></script>


    <!-- CDNs bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


    <!-- Auto complete master -->
    <script src="~/js/jquery.autocomplete.min.js"></script>

    <!-- cookie plugin et le weather api -->
    <script src="~/js/moment.js"></script>
    <script src="~/js/jquery.cookie.js"></script>
    <script src="~/js/weather-client.js"></script>

    <!-- Scripts custome & Blazor framework for the client -->
    <script src="~/_framework/blazor.server.js" autostart="false"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/applicationjs.js"></script>

    <script>
        function load_config(url) {
            $.ajax({
                type: "GET",
                url: url,
                dataType: "html",
                success: function (data, textStatus) {
                    if (textStatus == "success") {
                        $("#load_config").html(data);
                    }
                },
                error: function (data, status, error) {
                    alert(error);
                }
            });
        }
    </script>
</body>
</html>
