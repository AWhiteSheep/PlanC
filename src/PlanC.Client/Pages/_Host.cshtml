@page "/"
@namespace PlanC.Client.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{
    public string logoutparam;
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(HttpContext).RequestToken;
    }
    public string logoutParam()
    {
        return (logoutparam = Request.Query["logout"]);

    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Plans Cadres</title>
    <base href="~/" />
    <link async href="/css/site.css" rel="stylesheet" />
    <link async href="/lib/controllers/action-button.css" rel="stylesheet" />
    <!--link async href="css/my-tiles.css" rel="stylesheet" /-->
    <!-- cdn pour le richtext editor pour les css https://cdnjs.com/libraries/Trumbowyg -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.19.1/ui/trumbowyg.min.css" />

    <!-- Fonts -->
    <script src="https://kit.fontawesome.com/50510c8db2.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.css" rel="stylesheet">


    <!-- CDNs fontawesome, bootstrap & css style sheet pour syncfusion table -->
    <link async rel="stylesheet" type="text/css" href="https://cdn.syncfusion.com/ej2/17.3.18/fabric.css" />
    <link async rel="stylesheet" type="text/css" href="https://cdn.syncfusion.com/ej2/17.3.19/ej2-buttons/styles/material.css" />
    <link async rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" />

</head>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        @(await Html.RenderComponentAsync<PlanC.Client.Shared.NavMenu>(RenderMode.ServerPrerendered))
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content" style="min-height: 100vh">
                <div style="position:relative; background-image: url('/images/backgrounds/vangogh.jpg'); height: 100px;">
                </div>
                <!-- Topbar -->
                <partial name="../Shared/_Topbar.cshtml" />
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <app style="background-color: white">
                        @if (!String.IsNullOrEmpty(logoutParam()))
                        {
                            <div id="message-logout" class="container-message-logout-animate">
                                <div class="container-message">
                                    <div class="message-logout">
                                        <i class="far fa-laugh-wink image-logout" aria-hidden="true"></i>
                                        <div class="text-logout">
                                            Vous êtes maintenant déconnecté.
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <script>
                                document.addEventListener("readystatechange", function () {
                                    new URLSearchParams().delete("logout");
                                    setTimeout(() => {
                                        $("#message-logout").fadeOut();
                                    }, 10000);
                                });
                            </script>
                        }
                        @(await Html.RenderComponentAsync<App>(RenderMode.ServerPrerendered))
                    </app>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal de déconnection -->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <!-- Haut du modal -->
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"> Prêt pour partir? </h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <!-- Body du modal -->
                <div class="modal-body"> Choisir "Déconnexion" si vous voulez mettre fin à votre session. </div>
                <!-- Option du modal -->
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal"> Canceler </button>
                    <form id="formlogout" method="post">
                        @Html.AntiForgeryToken()
                    </form>
                    <button onclick="deconnection()" id="logout" class="btn btn-danger">Déconnexion</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer style="position: absolute; bottom: 0; width: -webkit-fill-available; width: 100%;" class="py-5 footer text-muted">
        <div class="container" style="position: relative">
            <p class="m-0 text-center text-dark">Tous droits réservés &copy; Yan Ha Routhier-Chevrier &amp; Alexandre Côté &amp; Maxime Denis 2019</p>

            <!-- affiche la température est la date -->
            <div style="position: fixed; bottom: 0; right: 0;">
                <div class="card" style="position: absolute; bottom: 0; right: 0;">
                    <div class="text-center" style="width: 336px;">
                        <a data-toggle="collapse" style="color: darkorange;" data-target="#weather-container" aria-expanded="false"><i id="weather-hint" class="fas fa-angle-double-up" style="vertical-align: middle;"></i></a>
                    </div>
                    <div class="collapse" id="weather-container">
                        <div class="card-body">
                            <div id="weatherOfDay" class="shadow p-3" style="position: relative; margin-right: 25px; margin-left: 25px; background-color: white;">
                                <div id="calendarMenu" class="top-right-action-icon bg-memory-secondary text-center">
                                    <i class="fas fa-calendar-day" style="vertical-align: bottom;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- JQuery -->
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

    <!-- librairie framework anime js https://cdnjs.cloudflare.com/ajax/libs/animejs/2.2.0/anime.min.js -->
    <!-- librairie framework pour le richtext editor https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.19.1/trumbowyg.min.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.19.1/trumbowyg.min.js"></script>
    <!-- rc:localization en francais pour le richtext editor https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.19.1/langs/fr.min.js https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.19.1/plugins/cleanpaste/trumbowyg.cleanpaste.min.js https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.19.1/plugins/pasteimage/trumbowyg.pasteimage.min.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.19.1/langs/fr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.19.1/plugins/cleanpaste/trumbowyg.cleanpaste.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.19.1/plugins/pasteimage/trumbowyg.pasteimage.min.js"></script>

    <!-- Ajax habituel de asp .net -->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.js"></script>

    <!-- pour le framework de template suncfusion -->
    <script src="https://cdn.syncfusion.com/ej2/17.3.18/dist/ej2.min.js"></script>
    <script src="https://cdn.syncfusion.com/ej2/17.3.18/dist/ejs.interop.min.js"></script>

    <!-- Material components pour le web -->
    <script src="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js"></script>

    <!-- CDNs bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>


    <!-- Auto complete master -->
    <script src="~/js/jquery.autocomplete.min.js"></script>

    <!-- cookie plugin et le weather api -->
    <script src="~/js/moment.js"></script>
    <script src="~/js/jquery.cookie.js"></script>
    <script src="~/js/weather-client.js"></script>

    <!-- Scripts custome & Blazor framework for the client -->
    <script src="~/_framework/blazor.server.js" autostart="false"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/applicationjs.js"></script>

    <script>
        function load_config(url) {
            $.ajax({
                type: "GET",
                url: url,
                dataType: "text",
                success: function (data, textStatus) {
                    if (textStatus == "success") {
                        $("#load_config").html(data);
                    }
                },
                error: function (data, status, error) {
                    alert(error);
                }
            });
        }
    </script>
    <div hidden>Icons made by <a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a></div>
</body>
</html>