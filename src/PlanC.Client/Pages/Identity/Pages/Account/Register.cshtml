@page "/compte/nouveau"
@model RegisterModel
@inject PlanC.Client.Data.PCU001Context context
@{
    SelectList departments = new SelectList(context.Departements, "Id", "Titre");
}
<div class="row justify-content-center">
    <div class="col-md-6" style="margin-bottom:220px;">
        <form class="card shadow" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="row p-5">
                <div class="col-12">
                    <h3 class="h3 text-center p-3" style="font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji'">
                        Création d'un nouveau compte.
                    </h3>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="form-group col-sm-4">
                    <label asp-for="Input.UserName"></label>
                    <input asp-for="Input.UserName" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-4">
                    <label asp-for="Input.DepartementId"></label>
                    <select asp-for="Input.DepartementId" asp-items="departments" class="form-control"></select>
                    <span asp-validation-for="Input.DepartementId" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-4">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-8">
                    <label asp-for="Input.GvnNm"></label>
                    <input asp-for="Input.GvnNm" class="form-control" />
                    <span asp-validation-for="Input.GvnNm" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-4">
                    <label asp-for="Input.Snm"></label>
                    <input asp-for="Input.Snm" class="form-control" />
                    <span asp-validation-for="Input.Snm" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Input.Clef"></label>
                    <input asp-for="Input.Clef" class="form-control" />
                    <span asp-validation-for="Input.Clef" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <button type="submit" class="btn btn-primary">S'enregistrer</button>
                </div>
                <div class="form-group col-12">
                    <p>
                        <a href="/login">S'authentifier.</a>
                    </p>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="../../Shared/_ValidationScriptsPartial" />
}
