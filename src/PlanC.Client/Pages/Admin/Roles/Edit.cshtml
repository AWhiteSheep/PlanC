@page "/admin/roles/modifier/{id}"
@model PlanC.Client.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Formulaire de modification de rôle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdentityRoleEntity.Id" />
            <div class="form-group">
                <label asp-for="IdentityRoleEntity.Name" class="control-label"></label>
                <input asp-for="IdentityRoleEntity.Name" class="form-control" />
                <span asp-validation-for="IdentityRoleEntity.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdentityRoleEntity.NormalizedName" class="control-label"></label>
                <input asp-for="IdentityRoleEntity.NormalizedName" class="form-control" />
                <span asp-validation-for="IdentityRoleEntity.NormalizedName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdentityRoleEntity.ConcurrencyStamp" class="control-label"></label>
                <input asp-for="IdentityRoleEntity.ConcurrencyStamp" class="form-control" />
                <span asp-validation-for="IdentityRoleEntity.ConcurrencyStamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
