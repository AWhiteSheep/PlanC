@page "/admin/roles/creer"
@model PlanC.Client.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4>Formulaire de création de rôles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdentityRoleEntity.Id" class="control-label"></label>
                <input asp-for="IdentityRoleEntity.Id" class="form-control" />
                <span asp-validation-for="IdentityRoleEntity.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdentityRoleEntity.Name" class="control-label"></label>
                <input asp-for="IdentityRoleEntity.Name" class="form-control" />
                <span asp-validation-for="IdentityRoleEntity.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-page="Index">Annuler et revenir en arrière</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
