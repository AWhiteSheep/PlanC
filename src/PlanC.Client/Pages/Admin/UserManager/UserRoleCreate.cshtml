@page "/admin/roles/user/assigner"
@model PlanC.Client.UserRoleCreateModel


@{ 
    var AspNetRoles = Model.roleManager.Roles.ToList();
    var AspNetUsers = Model.userManager.Users.ToList();
}

    <div class="container justify-content-center">
        <div class="col-12 text-center">
            <h4>Les rôles</h4>
        </div>
        <hr />
        <div class="col-md-8 card shadow m-auto">
            <h4>Ajouter un utilisateur à un rôle</h4>
            <hr />
            <div class="row">
                <form class="col-12 row" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-sm-6">
                        <label class="control-label">Description du rôle</label>
                        <select asp-for="AspNetUserRoles.RoleId" class="form-control">
                            <option></option>
                            @foreach (var value in AspNetRoles)
                            {

                                <option value="@value.Id">@value.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-sm-6">
                        <label class="control-label">Numéro d'utilisateur</label>
                        <select asp-for="AspNetUserRoles.UserId" class="form-control">
                            <option></option>
                            @foreach (var value in AspNetUsers)
                            {
                                <option value="@value.UserName">@value.UserName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-sm-6">
                        <input type="submit" value="Ajouter" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-page="Index">Annuler et retour à la liste</a>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
