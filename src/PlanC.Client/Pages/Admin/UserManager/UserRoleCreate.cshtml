@page "/admin/roles/user/assigner"
@model PlanC.Client.UserRoleCreateModel


@{ 
    var AspNetRoles = Model.roleManager.Roles.ToList();
    var AspNetUsers = Model.userManager.Users.ToList();
}

<h1>Create</h1>

<h4>AspNetUserRoles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AspNetUserRoles.RoleId" class="control-label"></label>
                <select asp-for="AspNetUserRoles.RoleId" class="form-control">
                    @foreach (var value in AspNetRoles)
                    {

                        <option value="@value.Id">@value.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="AspNetUserRoles.UserId" class="control-label"></label>
                <select asp-for="AspNetUserRoles.UserId" class="form-control">
                    @foreach (var value in AspNetUsers)
                    {
                        <option value="@value.UserName">@value.UserName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
