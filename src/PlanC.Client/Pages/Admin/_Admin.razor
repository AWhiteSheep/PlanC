@*le mot clé définissant la page n'est pas sensible la case*@
@page "/admin"
@namespace PlanC.Client.Pages
@attribute [Authorize]
<!-- Section de navigation -->
<div class="row mb-3">
    <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <!-- Donne accès au portail selon le role de l'utilisateur -->
                <li class="breadcrumb-item"><a href="/"> Portail </a></li>
                <li style="padding: 0 4px;"><i class="fas fa-home" style="font-size: 15px; color: #3f51b5;"></i></li>
                <li class="breadcrumb-item"><i class="fas fa-circle" style="font-size: 5px; vertical-align: middle; padding-right: 2px;"></i></li>
                <li class="breadcrumb-item active" aria-current="page"> Administration </li>
            </ol>
        </nav>
    </div>
</div>
<div class="row m-3">    
    <AuthorizeView Roles="Admin">
        <div class="col-sm-6 pt-3">
            <a href="/admin/roles" class="card d-flex justify-content-center text-center" style="height: 50px;">
                Gestion des rôles <i class="fas fa-key"></i>
            </a>
        </div>
        <div class="col-sm-6 pt-3">
            <a href="/admin/roles/authorise" class="card d-flex justify-content-center text-center" style="height: 50px;">
                Gestion droits des utilisateurs <i class="fas fa-user-tag"></i>
            </a>
        </div>
    </AuthorizeView>
    <AuthorizeView Roles="Admin, Ministaire">
        <div class="col-sm-6 pt-sm-3">
            <a href="/admin/programmes" class="card d-flex justify-content-center text-center" style="height: 50px;">
                Gestion des programmes <i class="fas fa-database"></i>
            </a>
        </div>
        <div class="col-sm-6 pt-3">
            <a href="/competences" class="card d-flex justify-content-center text-center" style="height: 50px;">
                Gestion des compétences <i class="fas fa-database"></i>
            </a>
        </div>
    </AuthorizeView>
    <div class="col-sm-6 pt-sm-3">
        <a href="/planscadres" class="card d-flex justify-content-center text-center" style="height: 50px;">
            Plans-cadres <i class="fas fa-database"></i>
        </a>
    </div>
    <div class="col-sm-6 pt-3">
        <a href="/plancours" class="card d-flex justify-content-center text-center" style="height: 50px;">
            Plan de cours <i class="fas fa-database"></i>
        </a>
    </div>
    <AuthorizeView Roles="Admin, Coordinateur, Enseignant">
        <div class="col-sm-6 pt-3">
            <a href="/plancadre/create" class="card d-flex justify-content-center text-center" style="height: 50px;">
                Nouveau plan-cadre <i class="fas fa-folder-plus"></i>
            </a>
        </div>
        <div class="col-sm-6 pt-3">
            <a href="/plancours/create" class="card d-flex justify-content-center text-center" style="height: 50px;">
                Nouveau plan de cours <i class="fas fa-folder-plus"></i>
            </a>
        </div>
    </AuthorizeView>
</div>
<hr />
<div class="col-12 text-center">
    <span class="smallerFontSize">La page ne répond pas? <a href="/admin" onclick="window.location.reload()" class="reload">Rafraîchir la page.</a></span>
</div>

