            </div>
            <div class="form-group">
                <label asp-for="DisponibilitesUtilisateur.AvlStm" class="control-label"></label>
                <input asp-for="DisponibilitesUtilisateur.AvlStm" class="form-control" />
                <span asp-validation-for="DisponibilitesUtilisateur.AvlStm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisponibilitesUtilisateur.AvlNtm" class="control-label"></label>
                <input asp-for="DisponibilitesUtilisateur.AvlNtm" class="form-control" />
                <span asp-validation-for="DisponibilitesUtilisateur.AvlNtm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
