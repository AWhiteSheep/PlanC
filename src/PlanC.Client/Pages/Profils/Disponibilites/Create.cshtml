@page 
@model PlanC.Client.Pages.Profils.CreateModel


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <h4 class="text-center p-5">Disponibilité de l'utilisateur</h4>
                <label class="control-label">Utilisateur</label>
                <input disabled class="form-control" value="@ViewBag.Uid" />
            </div>
