@page "/users/nouveau"
@using BlazorApp1

<h3>Nouveau profil</h3>


<div class="container-fluid">
    <div class="col">
        <h1>Nouveau profil</h1>
        <EditForm Model="@user" class="competence-form" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group">
                <label class="control-label col-sm-2" for="Username">Nom de l'utilisateur: </label>
                <div class="col-sm-10">
                    <InputText @bind-Value="user.Username" type="text" class="form-control" id="Username" placeholder="Nom de l'utilisateur" name="Username" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Password">Mot de passe: </label>
                <div class="col-sm-10">
                    <InputText @bind-Value="user.Password" type="password" class="form-control" id="Password" placeholder="Mot de passe" name="Password" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="ConfirmationPassword">Confirmation du mot de passe: </label>
                <div class="col-sm-10">
                    <InputText @bind-Value="user.ConfirmationPassword" type="password" class="form-control" id="ConfirmationPassword" placeholder="Confirmation du mot de passe" name="ConfirmationPassword" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-10">
                    <button type="submit" class="btn btn-default">Créer</button>
                </div>
            </div>
        </EditForm>
    </div>

</div>


@code {
    User user = new User();

    public class User
    {
        public string Username { get; set; }
        public string Password { get; set; }
        public string ConfirmationPassword { get; set; }
    }

    private void HandleValidSubmit() 
    {
        
    }
}
